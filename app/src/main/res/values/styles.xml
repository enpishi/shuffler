<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Shape appearances (give them proper Material3 parents) -->
    <style name="Shape.Rounded16" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Rounded24" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Base Button -->
    <style name="Widget.BlackSheep.Button.Base" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.BlackSheep.Button.Filled" parent="Widget.BlackSheep.Button.Base">
        <item name="backgroundTint">@color/bs_primary</item>
        <item name="android:textColor">@color/bs_on_primary</item>
    </style>

    <style name="Widget.BlackSheep.Button.Outlined" parent="Widget.BlackSheep.Button.Base">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/bs_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/bs_on_surface</item>
    </style>

    <style name="Widget.BlackSheep.Chip.Filter" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/bs_secondary_container</item>
        <item name="android:textColor">@color/bs_on_secondary_container</item>
        <item name="shapeAppearance">@style/Shape.Rounded16</item>
    </style>

    <style name="Theme.Blacksheep" parent="Theme.BlackSheep"/>

    <style name="CourtPlayerCellStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_player_cell_neutral</item>
    </style>

    <!-- Splash Video Theme (fullscreen video intro) -->
    <style name="Theme.BlackSheep.SplashVideo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Fullscreen / cutout -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Light (dark icons) system bars -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Prevent automatic darkening -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

</resources>