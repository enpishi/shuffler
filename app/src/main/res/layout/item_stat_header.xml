<?xml version="1.0" encoding="utf-8"?>
<!-- Single-line header row -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/bs_surface_variant"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/labelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.35"/>

    <TextView
        android:id="@+id/labelCur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cur G/W/L"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/labelName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/bs_outline"
        app:layout_constraintStart_toEndOf="@id/labelCur"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/labelOverall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All G/W/L Win%"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@+id/headerDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>