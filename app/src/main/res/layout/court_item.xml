<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Court 1"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditCourt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="EDIT"
                android:textAllCaps="true"/>
        </LinearLayout>

        <!-- Empty Court Indicator -->
        <TextView
            android:id="@+id/textViewEmptyCourt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="Empty Court"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/bs_on_surface_variant"
            android:visibility="gone"
            android:background="@color/bs_surface_variant"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:alpha="0.8"/>

        <!-- Player Grid with center VS -->
        <FrameLayout
            android:id="@+id/courtGrid"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_court_surface"
            android:visibility="visible">

            <GridLayout
                android:id="@+id/gridPlayers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="2"
                android:padding="8dp">

                <TextView
                    android:id="@+id/player1_name"
                    style="@style/CourtPlayerCellStyle"
                    android:text="P1"/>

                <TextView
                    android:id="@+id/player2_name"
                    style="@style/CourtPlayerCellStyle"
                    android:text="P2"/>

                <TextView
                    android:id="@+id/player3_name"
                    style="@style/CourtPlayerCellStyle"
                    android:text="P3"/>

                <TextView
                    android:id="@+id/player4_name"
                    style="@style/CourtPlayerCellStyle"
                    android:text="P4"/>
            </GridLayout>

            <TextView
                android:id="@+id/vsBadge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_vs_circle"
                android:gravity="center"
                android:text="vs"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </FrameLayout>

        <!-- Winner Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWinnerTeamA"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Winner"
                android:textAllCaps="false"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWinnerTeamB"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Winner"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>